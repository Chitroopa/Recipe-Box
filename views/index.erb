<h3><a href="/recipes/new">Add new recipe</a></h3>
<h3><a href="/recipes/rating">View recipe by rating</a></h3>
<h3><a href="/categories">Categories</a></h3>
<h2> Here are the list of recipes</h2>
<% if @recipes.any?() %>
  <ul>
    <% @recipes.each() do |recipe| %>
      <li><a href="/recipes/view/<%= recipe.id() %>"><%= recipe.name() %></a></li>
    <% end %>
  </ul>
<% else %>
  <h4>No recipes yet</h4>
<% end %>
